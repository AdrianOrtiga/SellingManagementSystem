@model List<SellingManagementSystem.Models.Sell>

@{
    ViewData["Title"] = "Sell";
}


<h1>Sells</h1>

<a class="btn btn-primary" asp-area="" asp-controller="Sell" asp-action="Create">Add new sell</a>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Date
        </th>
        <th>
            Client Name
        </th>
        <th>
            Total amount
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(sellItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(sellItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(sellItem => item.Client.Name)
        </td>
        <td>
            @Html.DisplayFor(sellItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

