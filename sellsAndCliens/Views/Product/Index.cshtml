@model List<SellingManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Product";
}


<h1>Products</h1>

<a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Create">Add new product</a>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Price per unit
        </th>
        <th>
            Cost
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(productItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(productItem => item.PricePerUnit) $
        </td>
        <td>
            @Html.DisplayFor(productItem => item.Cost) $
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

