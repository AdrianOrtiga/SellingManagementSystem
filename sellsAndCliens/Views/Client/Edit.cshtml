@model SellingManagementSystem.Models.Client

@{
}

<div class="container">
 <form  action="create" method="post">      
        <div class="form-group col-4">
            <label asp-for="Id">Id</label>
            <input asp-for="Id" type="text" class="form-control" readonly>
        </div>
        <div class="form-group col-4">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="name">
        </div>
        <button type="submit" class="btn btn-success mt-2">Edit client</button>
        <a class="btn btn-info mt-2" asp-action="Index" asp-controller="Client">Cancel</a>
    </form>

</div>

